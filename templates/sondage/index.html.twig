{% extends 'base.html.twig' %}

{% block title %}Sondages{% endblock %}

{% block body %}

{% if sondages is not empty %}
    <table class="table">
        <thead>
            <th>
                <td>Title</td>
                <td>Action</td>
            </th>
        </thead>
        <tbody>
            {% for sondage in sondages %}
            <tr>
                <td>{{sondage.name}}</td>
                <td>
                    <a href="{{path('sondage_edit', {id:sondage.id})}}" class="btn btn-primary">Edit</a>
                    <a href="{{path('sondage_delete', {id:sondage.id})}}" class="btn btn-danger">Delete</a>
                    <a href="{{path('sondage_detail', {id:sondage.id})}}" class="btn btn-primary">Show</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
<p>Il n'y a pas encore de sondages <a class="btn btn-primary" href="{{path('sondage_new')}}">Create sondage</a></p>
{% endif %}


{% endblock %}
